<section
                className="w-screen bg-rose-600 h-screen mx-auto flex justify-center items-center">
                <div
                    className="w-1/3 h-screen bg-slate-200 border border-pink-500 rounded-lg overflow-hidden">
                    <div
                        className="w-full h-20 bg-rose-400 rounded-t-lg flex shadow-sm">
                        <div
                            className="font-semibold text-stone-800 uppercase tracking-widest m-auto">
                            <div className="font-extrabold text-slate-200 shadow-lg p-4 border rounded-lg">
                                Form Registrasi</div>
                        </div>
                    </div>
                    <div
                        className="w-full h-full p-2">
                        <form action="">
                            <div className="shadow-lg px-4 py-3 rounded-lg">
                                <label
                                    htmlFor="email"
                                    className="font-semibold uppercase tracking-wider">Email</label>
                                <input
                                    type="email"
                                    placeholder="Email..."
                                    id="enail"
                                    className="block w-full py-4 my-2 border rounded-lg" />
                            </div>
                            <div className="shadow-lg px-4 py-3 rounded-lg">
                                <label
                                    htmlFor="username"
                                    className="font-semibold uppercase tracking-wider">Username</label>
                                <input
                                    type="text"
                                    placeholder="Username"
                                    id="username"
                                    className="block w-full py-4 my-2 border rounded-lg" />
                            </div>
                            <div className="shadow-lg px-4 py-3 rounded-lg">
                                <label
                                    htmlFor="password"
                                    className="font-semibold uppercase tracking-wider">Password & Verify Password</label>
                                <input
                                    type="password"
                                    placeholder="Enter your password..."
                                    id="password"
                                    className="block w-full py-4 my-2 border rounded-lg" />
                                <input
                                    type="password"
                                    placeholder="Verify your password..."
                                    id="password2"
                                    className="block w-full py-4 my-2 border rounded-lg" />
                            </div>
                            <div className="shadow-lg px-4 py-2 rounded-lg bg-rose-500 mt-4">
                                <button
                                    className="my-2 uppercase font-semibold text-lg text-slate-200 tracking-widest block w-full h-full"
                                    type="submit"
                                    id="register">Daftar</button>
                            </div>
                        </form>
                    </div>
                </div>
            </section>